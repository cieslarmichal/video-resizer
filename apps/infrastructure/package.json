{
  "name": "@video-resizer/infrastructure",
  "type": "module",
  "bin": {
    "app": "./dist/src/app.js"
  },
  "private": true,
  "scripts": {
    "build:clean": "rimraf dist",
    "build": "tsc --build tsconfig.build.json",
    "test": "vitest",
    "test:watch": "npm run test -- --watch",
    "deploy": "cdk deploy",
    "deploy:all": "cdk deploy --all --require-approval never",
    "deploy:prepare": "cdk bootstrap --require-approval never",
    "destroy": "cdk destroy",
    "destroy:all": "npm run destroy -- --all --require-approval never"
  },
  "dependencies": {
    "@aws-cdk/aws-lambda": "^1.204.0",
    "aws-cdk-lib": "2.103.1",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.125",
    "@types/source-map-support": "^0.5.9",
    "aws-cdk": "2.103.1"
  }
}
